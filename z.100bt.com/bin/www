#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('z.100bt.com:server');
var http = require('http');
var glob= require("glob");
var path=require("path");
var grunt=require("grunt");
var del=require("del");

function ibk(){
  var base=path.join(__dirname,"..");
  glob.sync(path.join(base,"data/*")).forEach(function(v, k) {
    grunt.file.copy(v, path.join(base,"bkdata/" + new Date().toUTCString().replace(/[,: ]/g,"").toLowerCase()+"/" + path.basename(v)))
  });
}
setInterval(function(){
  ibk();
},10*1000*60);/*十分钟备份一次*/
ibk();
/*清理100条前的历史记录*/
function clean() {
  var base = path.join(__dirname, "..");
  glob.sync(path.join(base,"bkdata/*")).sort().reverse().slice(100).forEach(function(v) {
    del(v);
  });
}
clean();
/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '8880');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
